{
  "name": "アフィリエイトコード置換",
  "description": "アフィリエイトコードを自動的に、自分の指定したコードに置き換えます。",
  "version": "0.0.1",
  "manifest_version": 3,
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset",
        "enabled": true,
        "path": "ruleset.json"
      }
    ]
  },
  "permissions": ["declarativeNetRequest"],
  "host_permissions": ["*://www.amazon.co.jp/*"]
}
